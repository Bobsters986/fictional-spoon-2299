<h2>Recipe: <%= @recipe.name %></h2>
<p>Complexity: <%= @recipe.complexity %></p>
<p>Genre: <%= @recipe.genre %></p>
<h3>Ingredients:</h3>
<% @recipe.ingredients.each do |ingredient| %>
  - <%= ingredient.name %>
  <br>
<% end %>
<h3>Total Cost: <%= @recipe.total_cost %></h3>

<%= form_with url:"/recipes/#{@recipe.id}/ingredients", method: :post, local: true do |form| %>
  <%= form.label :ingredient_id, "Add Ingredient" %>
  <%= form.number_field :ingredient_id %>
  <%= form.submit :Submit %>
<% end %>